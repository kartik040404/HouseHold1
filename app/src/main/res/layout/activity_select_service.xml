<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectService"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Choose a Service Provider "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.088" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:id="@+id/plumber"
                                android:layout_width="122dp"
                                android:layout_height="122dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="40dp"
                                app:srcCompat="@drawable/plumber" />

                            <TextView
                                android:textColor="@color/black"
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="75dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Plumber"
                                android:textSize="18sp"
                                android:textStyle="bold">


                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/elect"
                                android:layout_width="122dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="65dp"
                                android:layout_marginTop="40dp"
                                app:srcCompat="@drawable/illustration_electrician" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="85dp"
                                android:layout_marginTop="13dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Electrician"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:id="@+id/carp"
                                android:layout_width="122dp"
                                android:layout_height="122dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="40dp"
                                app:srcCompat="@drawable/carpenters_removebg_preview" />

                            <TextView
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="65dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Carpenter"
                                android:textSize="18sp"
                                android:textStyle="bold">


                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/homep"
                                android:layout_width="122dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="65dp"
                                android:layout_marginTop="40dp"
                                app:srcCompat="@drawable/home_painting_removebg_preview" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_marginTop="13dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Home Painting"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />


                        </LinearLayout>




                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/carclean"
                                android:layout_width="122dp"
                                android:layout_height="122dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="40dp"
                                app:srcCompat="@drawable/car_cleaning" />

                            <TextView
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="60dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Car Cleaning"
                                android:textSize="18sp"
                                android:textStyle="bold">


                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="122dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="65dp"
                                android:layout_marginTop="40dp"
                                android:id="@+id/ac"
                                app:srcCompat="@drawable/ac___appliance_repair__removebg_preview" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="13dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="AC &amp; Appliance Repair"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:id="@+id/homepcleaning"
                                android:layout_width="122dp"
                                android:layout_height="122dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="40dp"
                                app:srcCompat="@drawable/full_home_cleaning_removebg_preview" />

                            <TextView
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Full Home Cleaning"
                                android:textSize="18sp"
                                android:textStyle="bold">


                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="122dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="65dp"
                                android:layout_marginTop="40dp"
                                android:id="@+id/pest"
                                app:srcCompat="@drawable/pest_control" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="13dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Pest Control"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </LinearLayout>




                    </LinearLayout>
                    <!--    <Space-->
                    <!--        android:layout_width="match_parent"-->
                    <!--        android:layout_height="20dp" />-->
                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>













